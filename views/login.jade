extends layout

block content

	.d-flex.flex-column.align-items-center
		.col-md-4
			.nav.d-flex.justify-content-center
				.nav-item
					a.nav-link.text-secondary(href="/reg") Sign Up
				.nav-item
					a.nav-link.text-secondary(href="/login") Login

		.col-md-4
			h1 Login
			hr
			form(method="POST" action="/login")
				.form-group
					input.form-control(type="text" name="username")
				.form-group
					input.form-control(type="password" name="password")
				.form-group
					button.btn.btn-dark(type="submit") Send

			if error
				pre= error

